<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> - Z -</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/z.styles.css" asp-append-version="true" />
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!-- Left Section: Logo and Anasayfa -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/uploads/13cd2d38-fb06-4836-acb6-fee2a04c6097.jpeg" alt="Logo" style="width: 40px;">
                </a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>

                <!-- Center Section: Search Input and Button -->
                <div class="collapse navbar-collapse justify-content-center">
                    <form class="d-flex" action="/Home/Search">
                        <input class="form-control me-2" type="search" placeholder="Kullanıcı Ara" name="SearchUser" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Ara</button>
                    </form>
                </div>

                <!-- Right Section: Profil and Logout Button -->
                <div class="d-flex justify-content-end">
                    <a class="nav-link" href="/profil/@ViewData["UserName"]">Profil</a>
                    <a asp-area="" asp-controller="Login" asp-action="Exit"><button class="btn btn-outline-danger" action="Login/Exit" type="button">Çıkış Yap</button></a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
